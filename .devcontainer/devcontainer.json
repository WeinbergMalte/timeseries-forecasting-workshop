{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "waitFor": "onCreateCommand",
    "updateContentCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && source $HOME/.cargo/env && uv sync && uv run python -m jupyter lab build",
    "postCreateCommand": "",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "settings": {
                "terminal.integrated.rendererType": "canvas",
                "workbench.colorTheme": "Dark+",
                "editor.defaultFormatter": "charliermarsh.ruff",
                "python.defaultInterpreterPath": "/workspaces/timeseries-forecasting-workshop/.venv/bin/python",
                "python.venvPath": "/workspaces/timeseries-forecasting-workshop/.venv"
            },
            "extensions": [
				"ms-toolsai.jupyter",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-python.vscode-pylance",
				"wayou.vscode-todo-highlight",
				"redhat.vscode-yaml",
				"tamasfe.even-better-toml",
				"bierner.markdown-mermaid",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"mechatroner.rainbow-csv"
			]
        }
    }
}
