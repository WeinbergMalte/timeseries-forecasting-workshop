{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
        "cpus": 2
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "python3 -m pip install poetry && poetry install && poetry run python3 -m jupyter lab build",
    // "postCreateCommand": "bash ./.devcontainer/post-install.sh",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
        "settings": {
            "workbench.colorTheme": "Dark+"
        },
        "extensions": [
            "ms-toolsai.jupyter",
            "ms-python.python"
            ]
        }
    }
}
