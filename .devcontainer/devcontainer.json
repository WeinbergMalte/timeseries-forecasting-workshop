{
    "image": "ghcr.io/astral-sh/uv:python3.11-bookworm-slim",
    "waitFor": "onCreateCommand",
    "updateContentCommand": "uv sync && uv run python -m ipykernel install --user --name timeseries",
    "postCreateCommand": "",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "settings": {
                "terminal.integrated.rendererType": "canvas",
                "workbench.colorTheme": "Dark+",
                "editor.defaultFormatter": "charliermarsh.ruff",
                "python.defaultInterpreterPath": "/workspaces/timeseries-forecasting-workshop/.venv/bin/python",
                "python.venvPath": "/workspaces/timeseries-forecasting-workshop",
                "jupyter.defaultKernel": "timeseries"
            },
            "extensions": [
				"ms-toolsai.jupyter",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-python.vscode-pylance",
				"wayou.vscode-todo-highlight",
				"redhat.vscode-yaml",
				"tamasfe.even-better-toml",
				"bierner.markdown-mermaid",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"mechatroner.rainbow-csv"
			]
        }
    }
}
